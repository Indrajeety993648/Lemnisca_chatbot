# Clearpath RAG Chatbot — Environment Variable Template
# Copy this file to .env and fill in your values.
# All backend variables use the CLEARPATH_ prefix (Section 9.1 of ARCHITECTURE.md).

# ---------------------------------------------------------------------------
# Required
# ---------------------------------------------------------------------------

# Groq API key — obtain at https://console.groq.com
CLEARPATH_GROQ_API_KEY="Your_api_key_here !"
# ---------------------------------------------------------------------------
# CORS — comma-separated list of allowed frontend origins
# ---------------------------------------------------------------------------

CLEARPATH_ALLOWED_ORIGINS=http://localhost:5173

# ---------------------------------------------------------------------------
# Logging
# ---------------------------------------------------------------------------

# Application log level: DEBUG, INFO, WARNING, ERROR (default: INFO)
CLEARPATH_LOG_LEVEL=INFO

# ---------------------------------------------------------------------------
# File Paths (relative to the project root where uvicorn is launched)
# ---------------------------------------------------------------------------

# Directory containing index.faiss and index.pkl (default: backend/data/faiss_index)
CLEARPATH_FAISS_INDEX_PATH=backend/data/faiss_index

# Directory where uploaded PDF files are saved (default: backend/data/pdfs)
CLEARPATH_PDF_DIR=backend/data/pdfs/clearpath_docs

# Append-only JSONL query log file (default: backend/data/logs/queries.jsonl)
CLEARPATH_LOG_FILE_PATH=backend/data/logs/queries.jsonl

# ---------------------------------------------------------------------------
# RAG Pipeline Parameters — do NOT change; immutable per ARCHITECTURE.md
# ---------------------------------------------------------------------------

# CLEARPATH_CHUNK_SIZE=512
# CLEARPATH_CHUNK_OVERLAP=64
# CLEARPATH_TOP_K=5
# CLEARPATH_SIMILARITY_THRESHOLD=0.35
# CLEARPATH_EMBEDDING_DIM=384

# ---------------------------------------------------------------------------
# Groq Model IDs — do NOT change; immutable per ARCHITECTURE.md
# ---------------------------------------------------------------------------

# CLEARPATH_SIMPLE_MODEL=llama-3.1-8b-instant
# CLEARPATH_COMPLEX_MODEL=llama-3.3-70b-versatile

# ---------------------------------------------------------------------------
# Frontend (Vite) — VITE_ prefix, used by frontend/.env
# ---------------------------------------------------------------------------

# Base URL for the FastAPI backend
VITE_API_BASE_URL=http://localhost:8000
