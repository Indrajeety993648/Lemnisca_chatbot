# Build stage
FROM node:20-alpine AS build

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci

# Copy source and build
COPY . .
# Ensure VITE_API_BASE_URL is set at build time to empty string for the reverse proxy
# The apiClient.ts already appends /api to all requests
ENV VITE_API_BASE_URL=
RUN npm run build

# Production stage â€” just the static files
FROM alpine:latest
WORKDIR /app
COPY --from=build /app/dist /app/dist
CMD ["sh", "-c", "cp -r /app/dist/* /dist/"]
